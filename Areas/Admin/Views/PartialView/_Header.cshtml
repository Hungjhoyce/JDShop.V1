<script>
// Toggle functions
function toggleProfileDropdown() {
    const dropdown = document.getElementById('profileDropdown');
    const container = dropdown.parentElement;
    
    dropdown.classList.toggle('show');
    container.classList.toggle('open');
    
    // Close other dropdowns
    document.getElementById('messageDropdown').classList.remove('show');
}

function toggleMessageDropdown() {
    const dropdown = document.getElementById('messageDropdown');
    dropdown.classList.toggle('show');
    
    // Close other dropdowns
    document.getElementById('profileDropdown').classList.remove('show');
    document.querySelector('.profile-dropdown').classList.remove('open');
    
    // Load messages when opening
    if (dropdown.classList.contains('show')) {
        getMessage();
    }
}

function toggleMobileSidebar() {
    // Add mobile sidebar toggle logic here
    console.log('Toggle mobile sidebar');
}

function toggleFullscreen() {
    if (!document.fullscreenElement) {
        document.documentElement.requestFullscreen();
    } else {
        if (document.exitFullscreen) {
            document.exitFullscreen();
        }
    }
}

// Close dropdowns when clicking outside
document.addEventListener('click', function(event) {
    const profileDropdown = document.querySelector('.profile-dropdown');
    const messageDropdown = document.querySelector('.message-dropdown');
    
    if (!profileDropdown.contains(event.target)) {
        document.getElementById('profileDropdown').classList.remove('show');
        profileDropdown.classList.remove('open');
    }
    
    if (!messageDropdown.contains(event.target)) {
        document.getElementById('messageDropdown').classList.remove('show');
    }
});

// Message functions
function getMessage() {
    $.ajax({
        url: '/Chat/GetMessage',
        type: 'GET',
        dataType: 'json',
        success: function (data) {
            handleGetMessageResponse(data);
        },
        error: function (xhr, status, error) {
            console.error('Ajax error:', status, error);
            console.log(xhr.responseText);
        }
    });
}

function handleGetMessageResponse(data) {
    var messageListContainer = $('#messageList');
    messageListContainer.empty();

    data.forEach(function (message) {
        var messageItem = $('<button>', { 
            class: 'message-item',
            style: 'width: 100%; text-align: left; background: none; border: none; padding: 0.75rem 1rem;'
        });
        
        var avatar = $('<img>', { 
            src: '/contents/Images/User/' + message.avatar, 
            alt: 'avatar', 
            class: 'message-avatar',
            style: 'width: 100%; height: 100%; object-fit: cover; border-radius: 50%;'
        });
        
        var content = $('<div>', { class: 'message-content', style: 'flex: 1;' });
        var name = $('<p>', { 
            class: 'message-name',
            text: message.name,
            style: 'margin-bottom: 0.25rem; font-size: 0.875rem;'
        });
        var text = $('<p>', { 
            class: 'message-text',
            text: message.messages,
            style: 'font-size: 0.75rem; color: #6b7280;'
        });

        content.append(name, text);
        messageItem.append(avatar, content);

        messageItem.on('click', function () {
            toggleChat1(message.userName);
            toggleMessageDropdown(); // Close dropdown after selection
        });

        messageListContainer.append(messageItem);
    });
}
</script>