<div class="main-container">
    <!-- Header Section -->
    <div class="header-section">
        <h1 class="header-title">
            <i class="mdi mdi-delete-alert"></i>
            Xác nhận xóa tài khoản
        </h1>
        <p class="header-subtitle">Thao tác này không thể hoàn tác</p>
    </div>

    <!-- Warning Container -->
    <div class="warning-container">
        <div class="warning-icon">
            <i class="mdi mdi-alert-circle"></i>
        </div>
        <div class="warning-text">
            <h3 class="warning-title">Cảnh báo quan trọng!</h3>
            <p class="warning-message">
                Bạn đang thực hiện xóa tài khoản quản lý. Hành động này sẽ xóa vĩnh viễn tất cả dữ liệu liên quan và không thể khôi phục.
            </p>
        </div>
    </div>

    <!-- Account Information Card -->
    <div class="account-card">
        <div class="card-header">
            <div class="avatar-container">
                @if (!string.IsNullOrEmpty(Model.Avartar))
                {
                    <img src="@Url.Content("~/contents/Images/Admin/" + Model.Avartar)"
                         class="avatar-image" alt="Avatar">
                }
                else
                {
                    <i class="mdi mdi-account"></i>
                }
            </div>
            <div class="user-info">
                <h2 class="user-name">@Model.FullName</h2>
                <p class="user-role">@(Model.Role?.Name ?? "Chưa phân quyền")</p>
            </div>
        </div>

        <div class="card-body">
            <div class="info-grid">
                <div class="info-item">
                    <div class="info-label">
                        <i class="mdi mdi-account"></i>
                        Tên tài khoản
                    </div>
                    <div class="info-value">@Model.UserName</div>
                </div>

                <div class="info-item">
                    <div class="info-label">
                        <i class="mdi mdi-email"></i>
                        Email
                    </div>
                    <div class="info-value">@Model.Email</div>
                </div>

                <div class="info-item">
                    <div class="info-label">
                        <i class="mdi mdi-phone"></i>
                        Số điện thoại
                    </div>
                    <div class="info-value">@(Model.Phone ?? "Chưa cập nhật")</div>
                </div>

                <div class="info-item">
                    <div class="info-label">
                        <i class="mdi mdi-calendar"></i>
                        Ngày sinh
                    </div>
                    <div class="info-value">
                        @(Model.Birthday.HasValue
                            ? Model.Birthday.Value.ToString("dd/MM/yyyy", new System.Globalization.CultureInfo("vi-VN"))
                            : "Chưa cập nhật")
                    </div>
                </div>

                <div class="info-item">
                    <div class="info-label">
                        <i class="mdi mdi-shield-account"></i>
                        Chức vụ
                    </div>
                    <div class="info-value">@(Model.Role?.Name ?? "Chưa phân quyền")</div>
                </div>

                <div class="info-item">
                    <div class="info-label">
                        <i class="mdi mdi-toggle-switch"></i>
                        Trạng thái
                    </div>
                    <div class="info-value">
                        @if (Model.Status == 1)
                        {
                            <span class="status-badge status-active">
                                <i class="mdi mdi-check-circle"></i>
                                Hoạt động
                            </span>
                        }
                        else if (Model.Status == 2)
                        {
                            <span class="status-badge status-inactive">
                                <i class="mdi mdi-close-circle"></i>
                                Ngừng hoạt động
                            </span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions Container -->
    <div class="actions-container">
        <h3 class="actions-title">
            <i class="mdi mdi-help-circle"></i>
            Bạn có chắc chắn muốn xóa tài khoản này?
        </h3>

        <div class="danger-zone">
            <h4 class="danger-title">
                <i class="mdi mdi-skull"></i
            </h4>
            <p class="danger-text">
                Sau khi xóa, tài khoản này sẽ bị xóa vĩnh viễn khỏi hệ thống.
                Tất cả dữ liệu liên quan sẽ không thể khôi phục.
            </p>
        </div>

        <form asp-action="DeleteQL" id="deleteForm">
            <input type="hidden" asp-for="Id" />
            <div class="form-actions">
                <a class="btn btn-secondary" asp-action="Manage">
                    <i class="mdi mdi-arrow-left"></i>
                    Hủy bỏ
                </a>
                <button type="submit" class="btn btn-danger" id="deleteBtn">
                    <i class="mdi mdi-delete"></i>
                    Xác nhận xóa
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var form = document.getElementById('deleteForm');
        var deleteBtn = document.getElementById('deleteBtn');

        form.addEventListener('submit', function(e) {
            e.preventDefault();

            // Double confirmation
            var confirmed = confirm('Bạn có THỰC SỰ chắc chắn muốn xóa tài khoản "' + '@Model.FullName' + '"?\n\nHành động này KHÔNG THỂ hoàn tác!');

            if (confirmed) {
                var finalConfirm = confirm('Xác nhận lần cuối: Xóa tài khoản "' + '@Model.FullName' + '"?');

                if (finalConfirm) {
                    deleteBtn.innerHTML = '<i class="mdi mdi-loading mdi-spin"></i> Đang xóa...';
                    deleteBtn.disabled = true;
                    form.classList.add('loading');

                    // Submit form after a short delay to show loading state
                    setTimeout(function() {
                        form.submit();
                    }, 500);
                }
            }
        });

        // Add warning on page unload if user tries to leave
        var hasSubmitted = false;

        form.addEventListener('submit', function() {
            hasSubmitted = true;
        });

        window.addEventListener('beforeunload', function(e) {
            if (!hasSubmitted) {
                e.preventDefault();
                e.returnValue = '';
            }
        });
    });
</script>