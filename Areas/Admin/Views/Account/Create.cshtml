    }

    .upload-text {
        font-size: 0.875rem;
        margin-bottom: 0.25rem;
    }

    .upload-hint {
        font-size: 0.75rem;
        color: #9ca3af;
    }

    .avatar-preview {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 10px;
    }

    .file-input {
        position: absolute;
        opacity: 0;
        width: 100%;
        height: 100%;
