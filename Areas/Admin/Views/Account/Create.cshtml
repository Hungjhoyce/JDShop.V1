        position: sticky;
        top: 2rem;
    }

    .avatar-section {
        text-align: center;
    }

    .avatar-title {
        font-size: 1.125rem;
        font-weight: 600;
        color: #1d1d1f;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

    .avatar-upload-area {
