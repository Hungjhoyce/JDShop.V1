





@model Account

@{
    ViewData["Title"] = "Thêm tài khoản mới";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var AccountTypeId = ViewBag.AccountTypeId;
}

<style>
    body {
        background-color: #f5f5f7;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    .create-page {
        padding: 2rem;
        margin: 0 auto;
    }

    .page-header {
        margin-bottom: 2rem;
    }

    .page-title {
        font-size: 1.75rem;
        font-weight: 600;
        color: #1d1d1f;
        margin: 0 0 0.5rem 0;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .page-subtitle {
        font-size: 0.875rem;
        color: #86868b;
        margin: 0;
    }

    
