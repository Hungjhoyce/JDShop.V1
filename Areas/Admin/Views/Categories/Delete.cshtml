@model JDshop.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
.content-wrapper {
    padding: 32px;
    background-color: #f8fafc;
    min-height: calc(100vh - 64px);
}

.page-header {
    margin-bottom: 32px;
}

.page-title {
    font-size: 28px;
    font-weight: 600;
    color: #111827;
    margin: 0 0 8px 0;
}

.page-subtitle {
    color: #6b7280;
    font-size: 16px;
    margin: 0;
}


.delete-container {
    margin: 0 auto;
}

.warning-card {
    background: #fef2f2;
    border: 1px solid #fecaca;
    border-radius: 8px;
    padding: 20px;
    margin-bottom: 24px;
    display: flex;
    align-items: center;
    gap: 12px;
}

.warning-icon {
    width: 24px;
    height: 24px;
    color: #dc2626;
    flex-shrink: 0;
}

.warning-text {
    color: #dc2626;
    font-weight: 500;
    margin: 0;
}

.details-card {
    background: white;
    border-radius: 8px;
    border: 1px solid #e5e7eb;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
    overflow: hidden;
}

.card-header {
    background-color: #f9fafb;
    padding: 24px;
    border-bottom: 1px solid #e5e7eb;
    display: flex;
    align-items: center;
    gap: 16px;
}

.header-icon {
    width: 56px;
    height: 56px;
    background: linear-gradient(135deg, #a855f7 0%, #8b5cf6 100%);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}

.header-icon svg {
    width: 28px;
    height: 28px;
    color: white;
}

.header-content h2 {
    font-size: 20px;
    font-weight: 600;
    color: #111827;
    margin: 0 0 4px 0;
}

.header-content p {
    color: #6b7280;
    margin: 0;
    font-size: 14px;
}

.card-body {
    padding: 24px;
}

.details-list {
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin-bottom: 32px;
}

.detail-row {
    display: flex;
    align-items: center;
    gap: 16px;
}

.detail-icon {
    width: 20px;
    height: 20px;
    color: #6b7280;
    flex-shrink: 0;
}

.detail-label {
    width: 140px;
    font-size: 14px;
    color: #6b7280;
    flex-shrink: 0;
}

.detail-value {
    font-size: 14px;
    color: #111827;
    flex: 1;
}

.status-badge {
    padding: 4px 12px;
    border-radius: 6px;
    font-size: 12px;
    font-weight: 500;
    display: inline-block;
}

.status-active {
    background-color: #dcfce7;
    color: #166534;
}

.status-inactive {
    background-color: #fee2e2;
    color: #dc2626;
}

.supplier-info {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 8px 12px;
    background-color: #f3f4f6;
    border-radius: 6px;
    font-size: 14px;
    color: #374151;
    width: fit-content;
}

.supplier-icon {
    width: 16px;
    height: 16px;
    color: #6b7280;
}

.card-actions {
    padding: 20px 24px;
    background-color: #f9fafb;
    border-top: 1px solid #e5e7eb;
    display: flex;
    gap: 12px;
    justify-content: flex-end;
}

.btn {
    padding: 10px 20px;
    border-radius: 6px;
    font-size: 14px;
    font-weight: 500;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    transition: all 0.2s ease;
    cursor: pointer;
    border: 1px solid;
}

.btn-danger {
    background-color: #dc2626;
    border-color: #dc2626;
    color: white;
}

.btn-danger:hover {
    background-color: #b91c1c;
    border-color: #b91c1c;
    color: white;
    text-decoration: none;
}

.btn-secondary {
    background-color: white;
    border-color: #d1d5db;
    color: #374151 !important;
}

.btn-secondary:hover {
    background-color: #f9fafb;
    border-color: #9ca3af;
    color: #374151;
    text-decoration: none;
}


</style>

<div class="content-wrapper">
    <div class="delete-container">
        

        <div class="page-header">
            <h1 class="page-title">Xóa loại sản phẩm</h1>
            <p class="page-subtitle">Xác nhận xóa loại sản phẩm khỏi hệ thống</p>
        </div>

        <div class="warning-card">
            <svg class="warning-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
            </svg>
            <p class="warning-text">Bạn có chắc chắn muốn xóa loại sản phẩm này? Hành động này không thể hoàn tác.</p>
        </div>

        <div class="details-card">
            <div class="card-header">
                <div class="header-icon">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                    </svg>
                </div>
                <div class="header-content">
                    <h2>@Html.DisplayFor(model => model.Name)</h2>
                    <p>Thông tin loại sản phẩm sẽ bị xóa</p>
                </div>
            </div>

            <div class="card-body">
                <div class="details-list">
                    <div class="detail-row">
                        <svg class="detail-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                        </svg>
                        <span class="detail-label">Tên loại sản phẩm</span>
                        <span class="detail-value">@Html.DisplayFor(model => model.Name)</span>
                    </div>

                    <div class="detail-row">
                        <svg class="detail-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                        <span class="detail-label">Mô tả</span>
                        <span class="detail-value">@Html.DisplayFor(model => model.Description)</span>
                    </div>

                    <div class="detail-row">
                        <svg class="detail-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <span class="detail-label">Trạng thái</span>
                        <span class="detail-value">
                            @if (Model.Status == true)
                            {
                                <span class="status-badge status-active">Hoạt động</span>
                            }
                            else
                            {
                                <span class="status-badge status-inactive">Ngừng hoạt động</span>
                            }
                        </span>
                    </div>

                    <div class="detail-row">
                        <svg class="detail-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a2 2 0 012-2h4a2 2 0 012 2v4m-6 4v10m6-10v10m-6-4h6"></path>
                        </svg>
                        <span class="detail-label">Ngày tạo</span>
                        <span class="detail-value">
                            @(Model.Cdt.HasValue
                                ? Model.Cdt.Value.ToString("dd/MM/yyyy", new System.Globalization.CultureInfo("vi-VN"))
                                : "Chưa có thông tin")
                        </span>
                    </div>

                    <div class="detail-row">
                        <svg class="detail-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                        </svg>
                        <span class="detail-label">Nhà cung cấp</span>
                        <span class="detail-value">
                            <div class="supplier-info">
                                <svg class="supplier-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                                </svg>
                                @Html.DisplayFor(model => model.Supplier.Name)
                            </div>
                        </span>
                    </div>
                </div>
            </div>

            <div class="card-actions">
                <a asp-action="Index" class="btn btn-secondary">
                    <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    Hủy
                </a>
                <form asp-action="Delete" style="display: inline;">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa loại sản phẩm này?')">
                        <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                        Xác nhận xóa
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>