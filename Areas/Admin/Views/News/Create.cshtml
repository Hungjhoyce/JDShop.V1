<div class="main-container">
    <!-- Header Section -->
    <div class="header-section">
       

        <h1 class="header-title">
            <i class="mdi mdi-plus-circle"></i>
            Thêm tin tức mới
        </h1>
        <p class="header-subtitle">Tạo bài viết tin tức mới cho website</p>
    </div>

    <form asp-action="Create" method="post" enctype="multipart/form-data" id="createForm">
        <div asp-validation-summary="ModelOnly" class="validation-error"></div>

        <div class="form-container">
            <!-- Main Content -->
            <div class="main-card">
                <div class="card-header">
                    <h2 class="card-title">
                        <i class="mdi mdi-text-box"></i>
                        Thông tin bài viết
                    </h2>
                </div>

                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Title" class="form-label required">Tiêu đề bài viết</label>
                        <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề bài viết" required />
                        <div class="form-hint">Tiêu đề nên ngắn gọn, hấp dẫn và mô tả chính xác nội dung</div>
                        <span asp-validation-for="Title" class="validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Content" class="form-label required">Nội dung</label>
                        <textarea asp-for="Content" class="form-control" id="summernote" required></textarea>
                        <div class="form-hint">Sử dụng các công cụ định dạng để làm nội dung hấp dẫn hơn</div>
                        <span asp-validation-for="Content" class="validation-error"></span>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="sidebar-card">
                <div class="sidebar-header">
                    <h3 class="sidebar-title">
                        <i class="mdi mdi-image"></i>
                        Hình ảnh đại diện
                    </h3>
                </div>

                <div class="sidebar-body">
                    <!-- Image Upload -->
                    <div class="image-upload-container" id="uploadContainer" onclick="document.getElementById('imageUpload').click()">
                        <div class="image-upload-icon">
                            <i class="mdi mdi-cloud-upload"></i>
                        </div>
                        <div class="image-upload-text">Nhấp để tải lên hình ảnh</div>
                        <div class="image-upload-hint">Hỗ trợ JPG, PNG, JPEG (Tối đa 5MB)</div>
                        <input type="file" name="fAvatars" id="imageUpload" class="file-input" onchange="previewImage(event)" accept="image/*" required />
                    </div>

                    <div class="image-preview-container" id="imagePreviewContainer" style="display: none;">
                        <!-- Preview will be inserted here -->
                    </div>

                    <!-- Tips Card -->
                    <div class="tips-card">
                        <h4 class="tips-title">
                            <i class="mdi mdi-lightbulb"></i>
                            Mẹo viết bài
                        </h4>
                        <ul class="tips-list">
                            <li>Sử dụng tiêu đề hấp dẫn và dễ hiểu</li>
                            <li>Chia nội dung thành các đoạn ngắn</li>
                            <li>Thêm hình ảnh chất lượng cao</li>
                            <li>Kiểm tra chính tả trước khi đăng</li>
                            <li>Sử dụng từ khóa phù hợp</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Actions -->
        <div class="actions-container">
            <h3 class="actions-title">
                <i class="mdi mdi-content-save"></i>
                Lưu bài viết
            </h3>
            <div class="form-actions">
                <button type="submit" class="btn btn-primary" id="submitBtn">
                    <i class="mdi mdi-plus"></i>
                    Thêm mới
                </button>
                <a class="btn btn-secondary" asp-action="Index">
                    <i class="mdi mdi-arrow-left"></i>
                    Quay lại
                </a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote.min.css" rel="stylesheet" />
    <script>
        $(document).ready(function() {
            // Initialize Summernote with custom options
            $('#summernote').summernote({
                height: 300,
                toolbar: [
                    ['style', ['style']],
                    ['font', ['bold', 'underline', 'clear']],
                    ['color', ['color']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['table', ['table']],
                    ['insert', ['link', 'picture']],
                    ['view', ['fullscreen', 'codeview', 'help']]
                ],
                placeholder: 'Viết nội dung bài viết tại đây...',
                callbacks: {
                    onImageUpload: function(files) {
                        // Custom image upload handler
                        for (let i = 0; i < files.length; i++) {
                            const file = files[i];
                            if (file.size > 5 * 1024 * 1024) {
                                alert('Kích thước file quá lớn. Tối đa 5MB.');
                                return;
                            }

                            // Insert as base64 for demo
                            const reader = new FileReader();
                            reader.onloadend = function() {
                                const img = document.createElement('img');
                                img.src = reader.result;
                                img.style.maxWidth = '100%';
                                $('#summernote').summernote('insertNode', img);
                            }
                            reader.readAsDataURL(file);
                        }
                    }
                }
            });

            // Add smooth animations
            var cards = document.querySelectorAll('.main-card, .sidebar-card, .actions-container');
            cards.forEach(function(card, index) {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';

                setTimeout(function() {
                    card.style.transition = 'all 0.6s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 100);
            });
        });

        // Preview uploaded image
        function previewImage(event) {
            const file = event.target.files[0];
            if (!file) return;

            if (file.size > 5 * 1024 * 1024) {
                alert('Kích thước file quá lớn. Tối đa 5MB.');
                event.target.value = '';
                return;
            }

            const reader = new FileReader();
            const previewContainer = document.getElementById('imagePreviewContainer');

            reader.onload = function(e) {
                previewContainer.innerHTML = `
                    <img src="${e.target.result}" class="image-preview" alt="Preview">
                    <button type="button" class="remove-image-btn" onclick="removeImage()">
                        <i class="mdi mdi-delete"></i> Xóa hình ảnh
                    </button>
                `;
                previewContainer.style.display = 'block';

                // Hide upload container
                document.getElementById('uploadContainer').style.display = 'none';
            };

            reader.readAsDataURL(file);
        }

        // Remove image
        function removeImage() {
            document.getElementById('imageUpload').value = '';
            document.getElementById('imagePreviewContainer').style.display = 'none';
            document.getElementById('uploadContainer').style.display = 'block';
        }

        // Drag and drop functionality
        const uploadContainer = document.getElementById('uploadContainer');

        ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
            uploadContainer.addEventListener(eventName, preventDefaults, false);
        });

        function preventDefaults(e) {
            e.preventDefault();
            e.stopPropagation();
        }

        ['dragenter', 'dragover'].forEach(eventName => {
            uploadContainer.addEventListener(eventName, highlight, false);
        });

        ['dragleave', 'drop'].forEach(eventName => {
            uploadContainer.addEventListener(eventName, unhighlight, false);
        });

        function highlight(e) {
            uploadContainer.classList.add('dragover');
        }

        function unhighlight(e) {
            uploadContainer.classList.remove('dragover');
        }

        uploadContainer.addEventListener('drop', handleDrop, false);

        function handleDrop(e) {
            const dt = e.dataTransfer;
            const files = dt.files;

            if (files.length > 0) {
                document.getElementById('imageUpload').files = files;
                previewImage({ target: { files: files } });
            }
        }

        // Form submission
        document.getElementById('createForm').addEventListener('submit', function(e) {
            const submitBtn = document.getElementById('submitBtn');
            submitBtn.innerHTML = '<i class="mdi mdi-loading mdi-spin"></i> Đang tạo...';
            submitBtn.disabled = true;
            this.classList.add('loading');
        });

        // Auto-save draft functionality (optional)
        let autoSaveTimer;
        function autoSave() {
            clearTimeout(autoSaveTimer);
            autoSaveTimer = setTimeout(() => {
                const title = document.querySelector('input[name="Title"]').value;
                const content = $('#summernote').summernote('code');

                if (title || content) {
                    localStorage.setItem('news_draft', JSON.stringify({
                        title: title,
                        content: content,
                        timestamp: new Date().toISOString()
                    }));
                }
            }, 2000);
        }

        // Load draft on page load
        window.addEventListener('load', function() {
            const draft = localStorage.getItem('news_draft');
            if (draft) {
                const data = JSON.parse(draft);
                if (confirm('Bạn có muốn khôi phục bản nháp đã lưu?')) {
                    document.querySelector('input[name="Title"]').value = data.title;
                    $('#summernote').summernote('code', data.content);
                }
            }
        });

        // Add auto-save listeners
        document.querySelector('input[name="Title"]').addEventListener('input', autoSave);
        $('#summernote').on('summernote.change', autoSave);

        // Clear draft on successful submit
        document.getElementById('createForm').addEventListener('submit', function() {
            localStorage.removeItem('news_draft');
        });
    </script>
}