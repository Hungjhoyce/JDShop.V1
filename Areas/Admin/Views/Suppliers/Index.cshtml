



@model IEnumerable<JDshop.Models.Supplier>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
.content-wrapper {
    padding: 32px;
    background-color: #f8fafc;
    min-height: calc(100vh - 64px);
}

.page-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 32px;
}

.header-content h1 {
    font-size: 32px;
    font-weight: 700;
    color: #111827;
    margin: 0 0 8px 0;
}

.header-content p {
    color: #6b7280;
    font-size: 16px;
    margin: 0;
}

.btn-add {
    background-color: #3b82f6;
    color: white;
    padding: 12px 20px;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 500;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    transition: all 0.2s ease;
    border: none;
    cursor: pointer;
}

.btn-add:hover {
    background-color: #2563eb;
    color: white;
    text-decoration: none;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.4);
}

.suppliers-container {
    background: white;
    border-radius: 12px;
    border: 1px solid #e5e7eb;
    overflow: hidden;
}

.supplier-card {
    display: flex;
    align-items: center;
    padding: 24px;
    border-bottom: 1px solid #f3f4f6;
    transition: all 0.2s ease;
}

.supplier-card:last-child {
    border-bottom: none;
}

.supplier-card:hover {
    background-color: #f9fafb;
}

.supplier-icon {
    width: 48px;
    height: 48px;
    background-color: #dbeafe;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 16px;
    flex-shrink: 0;
}

.supplier-icon svg {
    width: 24px;
    height: 24px;
    color: #3b82f6;
}

.supplier-info {
    flex: 1;
    min-width: 0;
}

.supplier-name {
    font-size: 16px;
    font-weight: 600;
    color: #111827;
    margin: 0 0 4px 0;
}

.supplier-address {
    font-size: 14px;
    color: #6b7280;
    margin: 0 0 4px 0;
    line-height: 1.4;
}

.supplier-contact {
    font-size: 14px;
    color: #6b7280;
    margin: 0;
}

.supplier-contact span {
    margin-right: 16px;
}

.supplier-actions {
    display: flex;
    gap: 8px;
    align-items: center;
    flex-shrink: 0;
}

.action-btn {
    width: 36px;
    height: 36px;
    border-radius: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    transition: all 0.2s ease;
    border: 1px solid #e5e7eb;
    background: white;
}

.action-btn:hover {
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.btn-view {
    color: #6b7280;
}

.btn-view:hover {
    color: #3b82f6;
    border-color: #3b82f6;
}

.btn-edit {
    color: #6b7280;
}

.btn-edit:hover {
    color: #f59e0b;
    border-color: #f59e0b;
}

.btn-delete {
    color: #6b7280;
}

.btn-delete:hover {
    color: #ef4444;
    border-color: #ef4444;
}

.status-badge {
    padding: 4px 8px;
    border-radius: 12px;
    font-size: 12px;
    font-weight: 500;
    margin-left: 8px;
}

.status-active {
    background-color: #dcfce7;
    color: #166534;
}

.status-inactive {
    background-color: #fee2e2;
    color: #991b1b;
}

.empty-state {
    text-align: center;
    padding: 64px 24px;
    color: #6b7280;
}

.empty-state svg {
    width: 64px;
    height: 64px;
    margin: 0 auto 16px;
    color: #d1d5db;
}

.empty-state h3 {
    font-size: 18px;
    font-weight: 600;
    color: #374151;
    margin: 0 0 8px 0;
}

.empty-state p {
    margin: 0 0 24px 0;
}

@* @media (max-width: 768px) {
    .content-wrapper {
        padding: 16px;
    }
    
    .page-header {
        flex-direction: column;
        gap: 16px;
        align-items: stretch;
    }
    
    .supplier-card {
        flex-direction: column;
        align-items: flex-start;
        gap: 16px;
    }
    
    .supplier-actions {
        align-self: flex-end;
    }
} *@
</style>

<div class="content-wrapper">
    <div class="page-header">
        <div class="header-content">
            <h1>Nhà cung cấp</h1>
            <p>Quản lý thông tin nhà cung cấp</p>
        </div>
        <a asp-action="Create" class="btn-add">
            <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Thêm nhà cung cấp
        </a>
    </div>

    <div class="suppliers-container">
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <div class="supplier-card">
                    <div class="supplier-icon">
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                        </svg>
                    </div>
                    
                    <div class="supplier-info">
                        <h3 class="supplier-name">
                            @Html.DisplayFor(modelItem => item.Name)
                            @if (item.Status == true)
                            {
                                <span class="status-badge status-active">Hoạt động</span>
                            }
                            else
                            {
                                <span class="status-badge status-inactive">Ngừng hoạt động</span>
                            }
                        </h3>
                        <p class="supplier-address">@Html.DisplayFor(modelItem => item.Address)</p>
                        <div class="supplier-contact">
                            <span>@Html.DisplayFor(modelItem => item.Phone)</span>
                            <span>@Html.DisplayFor(modelItem => item.Email)</span>
                        </div>
                    </div>
                    
                    <div class="supplier-actions">
                        <a asp-action="Details" asp-route-id="@item.Id" class="action-btn btn-view" title="Xem chi tiết">
                            <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                            </svg>
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="action-btn btn-edit" title="Chỉnh sửa">
                            <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                            </svg>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="action-btn btn-delete" title="Xóa" onclick="return confirm('Bạn có chắc chắn muốn xóa nhà cung cấp này?')">
                            <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                            </svg>
                        </a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="empty-state">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
                <h3>Chưa có nhà cung cấp nào</h3>
                <p>Hãy thêm nhà cung cấp đầu tiên để bắt đầu quản lý.</p>
                <a asp-action="Create" class="btn-add">
                    <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    Thêm nhà cung cấp đầu tiên
                </a>
            </div>
        }
    </div>
</div>