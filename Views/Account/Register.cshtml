@model Account
@{
    Layout = null;
    ViewData["Title"] = "Register";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Đăng ký</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .container-scroller {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px 0;
        }

        .auth-form-light {
            background: white;
            border-radius: 15px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            padding: 2.5rem;
            width: 100%;
        }

            .auth-form-light h4 {
                color: #2c3e50;
                font-weight: 600;
                margin-bottom: 0.5rem;
                text-align: center;
            }

            .auth-form-light h6 {
                color: #7f8c8d;
                text-align: center;
                margin-bottom: 2rem;
            }

        .form-control {
            border: 2px solid #e9ecef;
            border-radius: 10px;
            padding: 0.875rem 1rem;
            font-size: 1rem;
            transition: all 0.3s ease;
            margin-bottom: 1rem;
        }

            .form-control:focus {
                border-color: #667eea;
                box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
            }

        .input-group {
            position: relative;
            margin-bottom: 1rem;
        }

        .input-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #7f8c8d;
            z-index: 10;
        }

        .input-group .form-control {
            padding-left: 45px;
            margin-bottom: 0;
        }

        .btn-gradient-primary {
            background: linear-gradient(45deg, #667eea, #764ba2);
            border: none;
            border-radius: 10px;
            color: white;
            font-weight: 600;
            padding: 0.875rem 2rem;
            transition: all 0.3s ease;
            width: 100%;
            margin-bottom: 1rem;
        }

            .btn-gradient-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
                color: white;
            }

        .auth-link {
            color: #667eea;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
        }

            .auth-link:hover {
                color: #764ba2;
                text-decoration: underline;
            }

        .text-center {
            text-align: center;
        }

        .brand-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .brand-logo {
            font-size: 2rem;
            color: #667eea;
            margin-bottom: 0.5rem;
        }

        .alert {
            border-radius: 10px;
            border: none;
            margin-bottom: 1.5rem;
        }

        .alert-danger {
            background-color: rgba(220, 53, 69, 0.1);
            color: #dc3545;
        }

        .alert-success {
            background-color: rgba(25, 135, 84, 0.1);
            color: #198754;
        }

        .form-group label {
            font-weight: 500;
            color: #2c3e50;
            margin-bottom: 0.5rem;
            display: block;
        }

        .row {
            margin-left: -10px;
            margin-right: -10px;
        }

        .col-6 {
            padding-left: 10px;
            padding-right: 10px;
        }

        .d-flex{
            display : block !important;
        }
    </style>
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-6 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-header">
                                <div class="brand-logo">
                                    <i class="fas fa-shopping-bag"></i> JD Shop
                                </div>
                            </div>

                            <h4>Xin chào! Bắt đầu nào</h4>
                            <h6 class="font-weight-light">Nhập thông tin tài khoản</h6>

                            <!-- Alert Messages -->
                            @if (ViewBag.ErrorMessage != null)
                            {
                                <div class="alert alert-danger">
                                    <i class="fas fa-exclamation-circle"></i> @ViewBag.ErrorMessage
                                </div>
                            }

                            @if (ViewBag.SuccessMessage != null)
                            {
                                <div class="alert alert-success">
                                    <i class="fas fa-check-circle"></i> @ViewBag.SuccessMessage
                                </div>
                            }

                            <form class="pt-3" method="post" asp-action="Register">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="input-group">
                                            <i class="fas fa-user input-icon"></i>
                                            <input class="form-control form-control-lg" asp-for="UserName" placeholder="Tên đăng nhập" required>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="input-group">
                                            <i class="fas fa-id-card input-icon"></i>
                                            <input class="form-control form-control-lg" asp-for="FullName" placeholder="Họ và tên" required>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-6">
                                        <div class="input-group">
                                            <i class="fas fa-envelope input-icon"></i>
                                            <input type="email" class="form-control form-control-lg" asp-for="Email" placeholder="Email" required>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="input-group">
                                            <i class="fas fa-phone input-icon"></i>
                                            <input type="number" class="form-control form-control-lg" asp-for="Phone" placeholder="Số điện thoại" required>
                                        </div>
                                    </div>
                                </div>

                                <div class="input-group">
                                    <i class="fas fa-lock input-icon"></i>
                                    <input type="password" class="form-control form-control-lg" asp-for="Password" placeholder="Mật khẩu" required>
                                </div>

                                <div class="row">
                                    <div class="col-6">
                                        <div class="input-group">
                                            <i class="fas fa-calendar input-icon"></i>
                                            <input type="date" class="form-control form-control-lg" asp-for="Birthday" placeholder="Ngày sinh" required>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label>Giới tính</label>
                                            <select class="form-control form-control-lg" asp-for="Gender" required>
                                                <option value="1" selected>Nam</option>
                                                <option value="2">Nữ</option>
                                                <option value="3">Khác</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">
                                        <i class="fas fa-user-plus"></i> ĐĂNG KÝ
                                    </button>
                                </div>

                                <div class="mt-3">
                                    <a asp-action="Index" asp-controller="Home" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">
                                        <i class="fas fa-arrow-left"></i> Trở về
                                    </a>
                                </div>

                                <div class="mt-3 text-center">
                                    <a asp-action="Login" class="auth-link">Đã có tài khoản? → Đăng nhập</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await Component.InvokeAsync("Notyf")
</body>
</html>